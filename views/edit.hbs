<form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
  <ul>
    名稱：<input class="form-control" type="text" placeholder="name" name="name" value="{{restaurant.name}}">
  </ul>
  <ul>
    類別：<input class="form-control" type="text" placeholder="category" name="category" value="{{restaurant.category}}">
  </ul>
  <ul>
    地址：<input class="form-control" type="text" placeholder="location" name="location" value="{{restaurant.location}}">
  </ul>
  <ul>
    電話：<input class="form-control" type="text" placeholder="phone" name="phone" value="{{restaurant.phone}}">
  </ul>
  <ul>
    簡介：<input class="form-control" type="text" placeholder="description" name="description"
      value="{{restaurant.description}}">
  </ul>
  <ul>
    照片：<input class="form-control" type="text" placeholder="image" name="image" value="{{restaurant.image}}">
  </ul>
  <div>
    <button type="submit">Save</button>
  </div>
</form>