<!-- ./views/index.handlebars -->
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
          <div class="dropdown mx-2">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              Sort
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/ascend">A->Z</a></li>
              <li><a class="dropdown-item" href="/descend">Z->A</a></li>
              <li><a class="dropdown-item" href="/sortByLocation">Location</a></li>
              <li><a class="dropdown-item" href="sortByCategory">Category</a></li>
            </ul>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto d-flex flex-wrap justify-content-center align-items-center">
      {{#each restaurants}}
      <div class="row cols-sm-3 m-2">
        <a href="/restaurants/{{this._id}}" class="text-secondary ">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="餐廳照片">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge badge-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>
        <div class="footer d-flex justify-content-end">
          <a class="m-1" href="/restaurants/{{this._id}}/edit">Edit</a>
          <a class="m-1" href="/restaurants/{{this._id}}">Detail</a>
          <form class="m-1" action="/restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
            <button type="submit">Delete</button>
          </form>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>